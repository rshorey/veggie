<%= form_for(@meal) do |f| %>
  <% if @meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% @meal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :name %>:
  <%= f.text_field :name %><br />
  A general description of the meal: <br />
  <%= f.text_field :description %><br />
  <%= f.label :street_address %>:
  <%= f.text_field :street_address %><br />
  <%= f.label :city %>:
  <%= f.text_field :city %><br />
  <%= f.label :state %>
  <%= f.select(:state, ["AL","AK","AS","AZ","AR","CA","CO","CT","DE","DC","FM","FL","GA","GU","HI","ID","IL","IN","IA","KS","KY","LA","ME","MH","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","MP","OH","OK","OR","PW","PA","PR","RI","SC","SD","TN","TX","UT","VT","VA","VI","WA","WV","WI","WY"])%><br />
  
  <%= f.label :zip_code %>:
  <%= f.text_field :zip_code %><br />
  
  Date: <%= date_select(:meal, :date, :default => 7.days.from_now) %> <br />
  
  Are there any animals living at the host's house? <br />
  <%= f.text_area :pets %><br />

  Any other notes? (for example, how to get in to the house)<br />
  <%= f.text_area :notes %><br />
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
